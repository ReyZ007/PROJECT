# Production Environment Configuration
# IMPORTANT: Update all values before deploying to production
NODE_ENV=production
PORT=3000

# Security - MUST BE CHANGED IN PRODUCTION
SESSION_SECRET=your-secure-session-secret-minimum-64-characters-long-replace-this-value
JWT_SECRET=your-secure-jwt-secret-minimum-64-characters-long-replace-this-value
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (if using external database)
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_SSL=true
DB_MAX_CONNECTIONS=20

# Redis (optional for caching)
REDIS_URL=

# Email Service
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=warn
ENABLE_CONSOLE_LOGGING=false

# Monitoring and Alerting
METRICS_ENDPOINT=your-metrics-endpoint
ALERT_WEBHOOK_URL=your-alert-webhook-url

# Storage (if using S3)
STORAGE_TYPE=s3
S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Features
ENABLE_REGISTRATION=true

# Tracing and Monitoring
ENABLE_TRACING=true
TRUSTED_PROXIES=1
